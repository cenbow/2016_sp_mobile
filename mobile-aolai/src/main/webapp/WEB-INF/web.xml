<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:resources/spring/applicationContext*.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 银联支付 -->
	<servlet>
		<servlet-name>UnionTrade</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.unionPay.trade.Trade</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UnionTrade</servlet-name>
		<url-pattern>/unionpay/trade</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Trade</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.trade.Trade</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Trade</servlet-name>
		<url-pattern>/alipay/trade</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>WebTrade</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.trade.WebTrade</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebTrade</servlet-name>
		<url-pattern>/alipay/webtrade</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ClientTrade</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.trade.ClientTrade</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientTrade</servlet-name>
		<url-pattern>/alipay/clienttrade</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>NotifyReceiver</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.notify.RSANotifyReceiverAlipay</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotifyReceiver</servlet-name>
		<url-pattern>/alipay/notifyReceiver</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.CallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CallBack</servlet-name>
		<url-pattern>/alipay/callBack</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SPWebCallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.SPWebCallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SPWebCallBack</servlet-name>
		<url-pattern>/alipay/spwebcallBack</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ALWebCallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.ALWebCallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ALWebCallBack</servlet-name>
		<url-pattern>/alipay/alwebcallBack</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShangpinClientCallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.ShangpinClientCallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShangpinClientCallBack</servlet-name>
		<url-pattern>/alipay/shangpinclientcallBack</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AoLaiClientCallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.AoLaiClientCallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AoLaiClientCallBack</servlet-name>
		<url-pattern>/alipay/aolaiclientcallBack</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShangpinAndroidClientCallBack</servlet-name>
		<servlet-class>com.shangpin.mobileAolai.common.alipay.callback.ShangpinAndroidClientCallBack</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShangpinAndroidClientCallBack</servlet-name>
		<url-pattern>/alipay/shangpinandroidclientcallBack</url-pattern>
	</servlet-mapping>

	
	<filter>
		<filter-name>contentFilter</filter-name>
		<filter-class>com.shangpin.mobileAolai.common.filter.ContentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>contentFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>checkURIFilter</filter-name>
		<filter-class>com.shangpin.mobileAolai.common.filter.CheckURIFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>checkURIFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>pagerFilter</filter-name>
		<filter-class>com.shangpin.mobileAolai.common.page.PagerFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>pagerFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>resources/struts2/struts.xml</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.shangpin.mobileAolai.common.util.InitListener</listener-class>
	</listener>
	<session-config>
		<session-timeout>1440</session-timeout>
	</session-config>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/500.jsp</location>
	</error-page>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>mobileaolai</param-value>
	</context-param>

	<jsp-config>
		<taglib>
			<taglib-uri>/tlds/payData</taglib-uri>
			<taglib-location>/WEB-INF/tlds/PayDataELFunction.tld</taglib-location>
		</taglib>
	</jsp-config>


</web-app>